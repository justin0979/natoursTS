{
  "presets": [
    [
      "@babel/env",
      {
        "targets": { "node": "current" },
        "useBuiltIns": "usage",
        "corejs": {
          "version": 3,
          "proposals": true
        }
      }
    ],
    [
      "@babel/react",
      {
        // Upgrade to new JSX Transform, no need to import React in files
        "runtime": "automatic"
      }
    ],
    "@babel/typescript"
  ],
  "plugins": [
    "@babel/transform-runtime",
    "@babel/proposal-class-properties",
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "&components": "./src/components",
          "&img": "./src/img",
          "&sass": "./src/sass",
          "&src": "./src",
          "__tests__": "./__tests__"
        }
      }
    ]
  ]
}
